<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-lg">
    <h2 class="text-2xl font-semibold text-center mb-6">
      <%= @car.new_record? ? "Add a New Car" : "Edit Car" %>
    </h2>

    <%= form_with(model: car, local: true, html: { class: "space-y-4" }) do |f| %>
      <% if car.errors.any? %>
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
          <h2 class="font-semibold"><%= pluralize(car.errors.count, "error") %> prohibited this car from being saved:</h2>
          <ul class="list-disc pl-5">
            <% car.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :model, class: "block font-medium text-gray-700" %>
        <%= f.text_field :model, class: "w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= f.label :manufactured_year, class: "block font-medium text-gray-700" %>
        <%= f.datetime_select :manufactured_year, class: "w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= f.label :price_per_day, class: "block font-medium text-gray-700" %>
        <%= f.number_field :price_per_day, class: "w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" %>
      </div>

      <div>
        <%= f.label :image, class: "block font-medium text-gray-700" %>
        <%= f.file_field :image, class: "w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200" %>
      </div>

      <div class="text-center">
        <%= f.submit @car.new_record? ? "Save Car" : "Update Car", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-md" %>
      </div>
    <% end %>
  </div>
</div>
