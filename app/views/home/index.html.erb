<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <title>Car Management</title>

  <!-- Include Tailwind CSS -->
  <%= stylesheet_link_tag 'tailwind', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gradient-to-r from-white to-blue-100">

  <!-- Main Content -->
  <div class="container mx-auto p-8 ">

    <!-- Carousel for Car Images -->
    <div class="relative w-full mb-10">
      <div class="relative overflow-hidden w-full max-w-3xl mx-auto pl-10  border-l-cyan-950 border-4 rounded-xl mb-4 h-120 pt-10 bg-amber-50">
  <!-- Slider Container -->
  <div class="flex transition-transform duration-1000 ease-in-out" id="carSlider">
    <!-- Car Images -->
    <div class="min-w-full">
      <img src="<%= asset_path('car1.avif') %>" alt="Car 1" class="w-2xl h-100 object-cover">
    </div>
    <div class="min-w-full">
      <img src="<%= asset_path('car2.avif') %>" alt="Car 2" class="w-2xl h-100 object-cover">
    </div>
    <div class="min-w-full">
      <img src="<%= asset_path('car3.avif') %>" alt="Car 3" class="w-2xl h-100 object-cover">
    </div>
    <div class="min-w-full">
      <img src="<%= asset_path('car4.avif') %>" alt="Car 4" class="w-2xl h-100 object-cover">
    </div>
    <div class="min-w-full">
      <img src="<%= asset_path('car5.avif') %>" alt="Car 5" class="w-2xl h-100 object-cover">
    </div>
    <div class="min-w-full">
      <img src="<%= asset_path('car6.avif') %>" alt="Car 6" class="w-2xl h-100 object-cover">
    </div>
    <div class="min-w-full">
      <img src="<%= asset_path('car7.avif') %>" alt="Car 7" class="w-2xl h-100 object-cover">
    </div>
  </div>
  <button id="prev" class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full">
    &#8249;
  </button>
  <button id="next" class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-gray-800 text-white p-2 rounded-full">
    &#8250;
  </button>
    </div>

    <!-- Random Sections Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">

      <!-- Rated One Card -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Rated One</h3>
        <p class="text-gray-600">Our cars are rated #1 in quality and customer satisfaction. Read our customer reviews to see why!</p>
      </div>

      <!-- Customer Reaction Card -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Customer Reactions</h3>
        <p class="text-gray-600">Customers love our cars! Here are some reactions from our happy buyers.</p>
      </div>

      <!-- Insurance Card -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Insurance</h3>
        <p class="text-gray-600">We offer a wide range of insurance options to make your car ownership experience easy and worry-free.</p>
      </div>

      <!-- Options Card -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Options</h3>
        <p class="text-gray-600">Explore various customization options to make your car truly yours.</p>
      </div>

      <!-- More Cards -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">More Info</h3>
        <p class="text-gray-600">Additional info about cars, leasing, and other services.</p>
      </div>

      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Special Deals</h3>
        <p class="text-gray-600">Check out our special offers for the best deals on cars!</p>
      </div>

      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-xl font-semibold mb-4">Car Accessories</h3>
        <p class="text-gray-600">Enhance your car with the best accessories available in the market.</p>
      </div>

    </div>
  </div>

  <!-- Footer -->
  <%= render 'layouts/footer' %>

  <script>
  let currentIndex = 0;
  const slider = document.getElementById('carSlider');
  const images = document.querySelectorAll('#carSlider > div');
  const totalImages = images.length;

  function moveSlider() {
    const offset = -currentIndex * 100;
    slider.style.transform = `translateX(${offset}%)`;
  }

  document.getElementById('next').addEventListener('click', function() {
    currentIndex = (currentIndex + 1) % totalImages;
    moveSlider();
  });

  document.getElementById('prev').addEventListener('click', function() {
    currentIndex = (currentIndex - 1 + totalImages) % totalImages;
    moveSlider();
  });

  // Optional: Auto-slide every 3 seconds
  setInterval(() => {
    currentIndex = (currentIndex + 1) % totalImages;
    moveSlider();
  }, 3000);
</script>